<table class="table table-striped">
<thead>
<tr>
<th scope="col" class="bg-success"> Name </th>
<th scope="col" class="bg-success"> Location </th>
   <% if current_user.admin %>
<th scope="col" class="bg-success"> Delete Farm </th>
<th scope="col" class="bg-success"> Edit Farm </th>
<%end%>

</tr>
</thead>

    <tbody>
        <% @farms.each do |farm| %>
        <tr>
            <td> <%= link_to farm.name, farm_plots_path(farm_id:farm.id)%> </td>

            <td> <%= farm.location %> </td>

            <% if current_user.admin %>

<td><a data-confirm="Are you sure you want to delete <%= farm.name %>?" data-method="delete" href="/farms/<%= farm.id %>" rel="nofollow">Delete</a> </td>

            <td><a href="<%= edit_farm_path(farm) %>"> Edit </a></td>
            <%end%>

</td>
</tr>
<% end %>
